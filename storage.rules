rules_version = '2';

// Firebase Storage Security Rules for PinkSnap Mobile App
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files (needed for web app)
    // This allows product images to be loaded in the web version
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Alternative: More restrictive rules (if you want authenticated read)
    // Uncomment below and comment out the above if you want to require auth
    /*
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    */
    
    // Admin-only write access to specific folders
    match /products/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
                  && request.auth.token.admin == true;
    }
  }
}
